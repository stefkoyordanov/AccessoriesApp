@using AccessoriesApp.Web.ViewModels
@model AssignRoleViewModel
@{
    ViewData["Title"] = "Assign Role";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Assign Role to User</h4>
                </div>
                <div class="card-body p-4">

                    <form asp-action="AssignRole" method="post">

                        <div class="mb-3">
                            <label asp-for="SelectedUserId" class="form-label">Select User</label>
                            <select asp-for="SelectedUserId" asp-items="Model.Users" class="form-select">
                                <option value="">-- Select User --</option>
                            </select>
                            <span asp-validation-for="SelectedUserId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SelectedRole" class="form-label">Select Role</label>
                            <select asp-for="SelectedRole" asp-items="Model.Roles" class="form-select">
                                <option value="">-- Select Role --</option>
                            </select>
                            <span asp-validation-for="SelectedRole" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check2-circle me-1"></i> Assign Role
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
