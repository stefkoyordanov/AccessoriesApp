@using AccessoriesApp.Web.ViewModels
@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "Category List";
}


<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Category List</h2>
    <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Category
    </a>
</div>


<table class="table table-striped table-hover table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Toggle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <span class="badge @(category.IsActive ? "bg-success" : "bg-danger")">
                        @(category.IsActive ? "Active" : "Inactive")
                    </span>
                </td>
                <td>
                    <form asp-controller="Categories" asp-action="ToggleStatus" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@category.Id" />
                        <button type="submit" class="btn btn-sm @(category.IsActive ? "btn-outline-danger" : "btn-outline-success")">
                            @(category.IsActive ? "Deactivate" : "Activate")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

