@using AccessoriesApp.Web.ViewModels
@model OrderFormInputModel

@{
    ViewData["Title"] = "Index";
}

<h1>Shopping cart</h1>


<div class="row justify-content-center" style="margin: 0 auto; ">    

    <div class="col-md-8">

    @foreach (var item in Model.OrderItems)
    {        
            <div class="card mb-3" >
                <div class="row justify-content-center" >
                    <div class="col-md-4 text-center">

                @if (item.Image != null)
                {
                    <a asp-controller="Accessories" asp-action="Details" asp-route-id="@item.Id">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" class="img-fluid w-100 h-100 object-fit-cover" style="max-height: 150px;" alt="@item.Title">
                    </a>
                }
                else
                {
                    <a asp-controller="Accessories" asp-action="Details" asp-route-id="@item.Id">
                    <img src="~/images/default-image.jpg" class="img-fluid w-100 h-100 object-fit-cover" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                    </a>
                }
                    </div>

                <div class="col-md-8">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">Category: @item.CategoryName</p>
                    <p class="card-text">PriceBGN: @item.PriceBGN</p>
                    <p class="card-text">PriceEuro: @item.PriceEuro</p>
                    <p class="card-text">PriceBGN: @item.Quantity</p>
                </div>
                </div>

            </div>
            </div>       
    }

    <div>
    <label asp-for="@Model.CourierId" class="form-label-add-edit">Select courier</label>
    <select asp-for="@Model.CourierId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Couriers, "Id", "Name"))">
    <option value="">...</option>
    </select>
    <span asp-validation-for="@Model.CourierId" class="text-danger"></span>
    </div>

    
    <div class="d-flex flex-column align-items-start mb-3">
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <div id="mytotal" class="text-danger fs-3 fw-bold">@ViewData["SumOrder"]</div>
        <a asp-controller="Accessories" asp-action="Add" class="btn btn-primary">
            <i class="fa-solid fa-circle-check"></i> Confirm Order
        </a>
    }    
    </div>    
    
    </div>

</div>

