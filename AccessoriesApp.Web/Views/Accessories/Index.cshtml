                @Html.DisplayFor(modelItem => item.CategoryAccessory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceBGN)
                </td>
